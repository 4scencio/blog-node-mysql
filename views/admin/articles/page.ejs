<!--Header-->
<%- include ('../../partials/header.ejs') %>

<!--Navbar-->
<%- include ('../../partials/homenavbar.ejs') %>

<body>
    
  <div class="container">
    <hr>

    <% result.articles.rows.forEach(article => { %>
    <div class="card">
        <div class="card-header">
          <%= article.title %>
        </div>
        <div class="card-body">
          <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
        </div>
    </div>
    <% }) %>
<br>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">

          <% if (result.page <= 1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <% } else if (result.page == 2) { %>
              <li class="page-item">
                <a class="page-link" href="/">Previous</a>
              </li>
          <% } else if (result.page >= 1) { %>
            <li class="page-item">
              <a class="page-link" href="/articles/page/<%= result.page - 1 %>" tabindex="-1">Previous</a>
            </li>
          <% } %>
          <li class="page-item">

            <% if(result.next) { %>
            <a class="page-link" href="/articles/page/<%= result.page + 1 %>">Next</a>
            <% } %>

          </li>
        </ul>
      </nav>
    <br>
    </div>

      
</body>

<!--Footer-->
<%- include ('../../partials/footer.ejs') %>